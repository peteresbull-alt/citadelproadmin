{
  "version": 2,
  "builds": [
    {
      "src": "citadel/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "buildCommand": "bash build_files.sh",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "citadel/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "citadel.settings",
    "PYTHONUNBUFFERED": "1"
  }
}
