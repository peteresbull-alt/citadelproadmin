{
  "version": 2,
  "builds": [
    {
      "src": "citadel/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "buildCommand": "bash build.sh",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "citadel/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "citadel.settings",
    "PYTHONUNBUFFERED": "1"
  }
}
